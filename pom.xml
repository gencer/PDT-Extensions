<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.dubture.pdt</groupId>
  <artifactId>parent</artifactId>
  <version>1.0.8.qualifier</version>
  <packaging>pom</packaging>
  <modules>
    <module>com.dubture.pdt.core</module>
	<module>com.dubture.pdt.formatter</module>
    <module>com.dubture.pdt.ui</module>
    <module>com.dubture.pdt.test</module>
  </modules>

  <properties>
    <tycho-version>0.13.0</tycho-version>
  </properties>

  <repositories>	  
   <repository>
     <id>github</id>
     <layout>p2</layout>
     <url>http://pulse00.github.com/p2/</url>
   </repository>
   <repository>
     <id>indigo</id>
     <layout>p2</layout>
     <url>http://download.eclipse.org/releases/indigo</url>
   </repository>	
  </repositories>

  <build>
    <plugins>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-maven-plugin</artifactId>
        <version>${tycho-version}</version>
        <extensions>true</extensions>
      </plugin>
    </plugins>
  </build>
</project>
